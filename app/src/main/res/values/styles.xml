<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2.5dp</item>
        <item name="boxStrokeWidthFocused">2.5dp</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="android:textColorHint">@color/colorSecondary</item>
        <item name="boxStrokeErrorColor">@color/colorError</item>
        <item name="errorTextColor">@color/colorError</item>
        <item name="hintTextAppearance">@style/StyleHintInput</item>
        <item name="hintTextColor">@color/colorSecondary</item>
    </style>

    <style name="StyleHintInput" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">18sp</item>
    </style>
//theme of bottomsheetdialog
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">700dp</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="CustomToolbar"  parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
    </style>
</resources>