<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:id="@+id/itemLevelContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/login_create_account_level_item_background"
            android:padding="20dp"
            android:focusable="true">
            <ImageView
                android:id="@+id/imgLevel"
                android:layout_alignParentStart="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/image_level_skill"
                android:scaleType="centerInside"
                />
            <TextView
                android:id="@+id/nameLevel"
                android:text="@string/level_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgLevel"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_black"
                android:textColor="@color/colorTitle"
                />
            <ImageView
                android:id="@+id/checkSelect"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:contentDescription="TODO" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>