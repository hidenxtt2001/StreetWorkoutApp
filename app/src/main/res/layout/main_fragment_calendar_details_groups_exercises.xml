<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.CalenderFragment.DetailsGroupExercises.DetailsGroupExercises">

    <ImageView
        android:id="@+id/image_background_group_exercises"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/training_dark_linear_gradient" />

    <ImageView
        android:id="@+id/image_button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:onClick="backCalendarFragment"
        android:src="@drawable/logo_back" />

    <LinearLayout
        android:id="@+id/layout_per"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:paddingStart="30dp"
            android:paddingLeft="30dp"
            android:text="calisthenics"
            android:textAllCaps="true"
            android:textColor="#B8B8B8"
            android:textSize="15sp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/txt_name_group_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:text="Tabata"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/show_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/icon_fire_24px" />

            <TextView
                android:id="@+id/txt_name_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:text="Level"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/icon_muscle_24px" />

            <TextView
                android:id="@+id/txt_name_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:text="Path Body"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="invisible" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/show_detail">

            <ImageView
                android:id="@+id/imgAnim2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"

                app:srcCompat="@drawable/main_calendar_fragment_circle_button_pulse" />

            <ImageView
                android:id="@+id/imgAnim"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"

                app:srcCompat="@drawable/main_calendar_fragment_circle_button_pulse" />

            <ImageView
                android:id="@+id/imgMiFoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"

                android:scaleType="centerCrop"
                app:srcCompat="@drawable/main_calendar_fragment_logo_next"

                />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>